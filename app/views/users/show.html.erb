<div>
  <%= flash[:notice] %>
</div>
<div class="container mt-4">
  <div class="row">
    <%= render 'list', book: @book, user: @user %>
    <div class="col-8">
      <h2>Books</h2>
      <table class="table table-hover" >
        <thead>
          <tr>
            <th></th>
            <th class="title">Title</th>
            <th class="body">Opinion</th>
          </tr>
        </thead>
        <tbody>
    <% @books.each do |book| %>
    <div>
      <p><%= image_tag book.user.get_profile_image(50,50) %></p>
      
      <%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
      <% end %>
      <p><%= book.body %></p>  
    
        
    </div>
    <% end %>
        </tbody>
      <    
    </div>
  </div>
</div>