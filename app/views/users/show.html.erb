<h2>User info</h2>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name  <%= @user.name %></h4>
  <h4>introduction
    <p><%= @user.introduction %></p>
  </h4>
  <%if @user == current_user %>
    <%= link_to "Edit", edit_user_path(@user.id) %>
    <% end %>
</div>

