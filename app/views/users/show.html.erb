<div>
  <%= flash[:notice] %>
</div>
<div class="container mt-4">
  <div class="row">
    <%= render 'list', book: @book, user: @user %>
    <div class="col-8">
      <h2>Books</h2>
      <table class="table table-hover" >
        <thead>
          <tr>
            <th></th>
            <th class="title">Title</th>
            <th class="body">Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(30,30),class:"rounded-circle" %>
            </td>
            <td>
              <div class="title">
                <%= link_to book_path(book.id) do %><%= book.title %>
                <% end %>
              </div>
            </td>
            <td>
              <div class"body"><%= book.body %></div>
            </td>

        <% end %>
        </tbody>
      </table>
    <%= paginate @books %>
    </div>
  </div>
</div>