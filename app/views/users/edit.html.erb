<div class="container">
  <div class="row">
    <div class="mx-auto mt-4 ">

        <h1>User info</h1>
          <% if @user.errors.any? %>
  　        <%= @user.errors.count %>　errors prohibited this book from being saved:
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for='inputName'>Name</label>
          <div><%= f.text_field :name,autofocus: true, id:"inputName", size: 55 %></div>
        </div>
        <div class="form-group">
          <label for='inputImage'>Image</label>
          <div><%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %></div>
        </div>
        <div class="form-group">
          <label for='inputintroduction'>Introduction</label>
          <div><%= f.text_area :introduction, id:"inputintroduction", size: "60x3" %></div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User",class:"btn btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>

