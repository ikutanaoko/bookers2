<div class="col-md-3">
  <div class="info">
    <h2>User info</h2>
  
    <div class="m-2"><%= image_tag user.get_profile_image(100,100) %></div>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
      

      <%= link_to(edit_user_path(user.id)) do %>
       <button type="button" class="btn btn-block btn-outline-dark mt-1"><i class="fas fa-user-cog"></i></button>
      <% end %>

  </div>
  <div class="newbook mt-4">
    <h2>New book</h2>
    <%= form_with model: book, url: books_path, method: :post do |f| %>
      <p>Title</p>
        <%= f.text_field :title %>
      <p>Opinion</p>
        <%= f.text_area :body %>
      <div><%= f.submit 'Create Book',class:"btn btn-success mt-1" %></div>
    <% end %>
  </div>
</div>
