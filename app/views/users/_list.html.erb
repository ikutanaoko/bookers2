<div class="col-4">
  <h2>User info</h2>
  
  <div>
    <%= image_tag user.get_profile_image(100,100) %>
    <h4>name  <%= user.name %></h4>
    <h4>introduction
      <p><%= user.introduction %></p>
    </h4>
    <%if user == current_user %>
      <%= link_to "Edit", edit_user_path(user.id) %>
    <% end %>
  </div>
  
  <h2>New book</h2>
    <%= form_with model: book, url: books_path, method: :post do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <div><%= f.submit 'Create Book',class:"btn btn-success mt-1" %></div>
    <% end %>
</div>
  