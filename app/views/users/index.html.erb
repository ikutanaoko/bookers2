<div class="container mt-4">
  <div class="row">
      <%= render 'list', book: @book, user: @user %>
    <div class="col-8">
      <h2>Users</h2>
      <table class="table table-hover" >
        <thead>
          <tr>

            <th class="image">image</th>
            <th class="name">name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(30,30),class:"rounded-circle" %>
            </td>
            <td><div class"name"><%= user.name %></div>
            </td>
            <td>
              <%= link_to user_path(user.id) do %>
                <div>Show</div>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>