<div class="container mt-4"> 
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this obj from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

	<div class="row">
			<%= render 'users/list', book: @book, user: @user %>
	  <div class="col-8">
			<h2>Books</h2>
 			<table class="table table-hover" >   
				<thead>
 	     	  <tr>
		        <th></th>
		        <th class="title">Title</th>
		        <th class="body">Opinion</th>
		      </tr>
		    </thead>
		    <tbody>
          <% @books.each do |book| %>
		      <tr>
            <td><%= image_tag book.user.get_profile_image(30,30),class:"rounded-circle" %>
            </td>
            <td>
						  <div class="title">
							  <%= link_to book_path(book.id) do %><p><%= book.title %></p>
							  <% end %>
						</div>
            </td>
			      <td><div class="body"><%= book.body %></div>
			      </td>
          </tr>
          <% end %>

        </tbody>

      </table>
      <%= paginate @books %>
    </div>
	</div>
</div>

