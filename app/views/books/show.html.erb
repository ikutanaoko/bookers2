<h2>Book detail</h2>

<div>
  <p>User name : <%= @book.user.name %></p>
  <p>Title : <%= @book.title %></p>
  <p>Opinion : <%= @book.body %></p>
  
  <%if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are You Sure?" %>
 <% end %>
